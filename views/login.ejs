<% include partials/header%>

<div class="form-spacing-top"> </div>

<div class="userForm form-bg container">
  <div class="container">
    <h3 class="form-title">Login to YelpCamp</h3>

    <form action="/login" method="POST"> 
        
      <div class="form-group"><input class="form-control" type="text" name="username" placeholder="Username"></div>
      <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
      <button class="form-control btn btn-success">Submit</button>

    </form>
    
    <form class="testAcc" action="/login" method="POST"> 
        
      <div class="form-group" style="display:none;"><input class="form-control" type="text" name="username" value="test"></div>
      <div class="form-group" style="display: none;"><input class="form-control" type="password" name="password" value="test"></div>
      <button class="form-control btn btn-primary testAcc">Log Into Test Account</button>

    </form>
  </div>
</div>

